<!doctype html>
<html>
<head>
  <!-- Base metadata and responsive viewport -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Page title (shown in browser tab) -->
  <title>SQL Script Web Panel</title>

  <!-- Bootstrap CSS (via CDN) for layout and components -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- App-specific stylesheet served from /public/style.css -->
  <link href="/style.css" rel="stylesheet">
</head>
<body class="bg-body-tertiary">
  <!-- Top navigation bar: keeps a simple link to the CRUD dashboard -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container d-flex justify-content-between">
      <a class="navbar-brand" href="/crud">CRUD</a>
      <div class="d-flex gap-2">
        <!-- Reserved for future nav items (e.g., Diagnostics, Scripts, About) -->
      </div>
    </div>
  </nav>

  <!-- Main content area; express-ejs-layouts injects view output here -->
  <main class="container py-4">
    <%- body %>
  </main>
</body>
</html>
