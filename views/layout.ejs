<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>CampusLearn</title>

  <!-- Global (light) styles -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/style.css">

  <!-- Load chatbot.css only for dark chatbot page -->
  <% if (locals.pageClass === 'theme-dark') { %>
    <link rel="stylesheet" href="/chatbot.css">
  <% } %>
</head>

<!-- Light everywhere by default; dark only when pageClass sets it -->
<body class="<%= (locals.pageClass === 'theme-dark') ? 'theme-dark' : 'bg-body-tertiary' %>">

  <!-- Page content -->
  <main class="container py-4">
    <%- body %>
  </main>

  <!-- Scripts -->
  <script src="/app.js"></script>
  <!-- If you have /public/api.js, serve as /api.js via express.static -->
  <script type="module" src="/api.js"></script>
</body>
</html>
