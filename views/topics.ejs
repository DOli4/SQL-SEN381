<div class="d-flex justify-content-between align-items-center mb-3">
  <h2 class="mb-0">Topics</h2>
  <% if (user && user.role === 'Student') { %>
    <a class="btn btn-primary btn-sm" href="/topics/create">New Topic</a>
  <% } %>
</div>

<div id="topicList" class="row g-3"></div>
<p id="empty" class="empty d-none">No topics yet.</p>

<script>
(async () => {
  const res = await fetch('/api/topics', { credentials: 'include' });
  const topics = await res.json();

  if (!topics.length) {
    document.getElementById('empty').classList.remove('d-none');
    return;
  }

  const container = document.getElementById('topicList');
  container.innerHTML = topics.map(t => `
    <div class="col-12 col-md-6">
      <div class="card card-compact h-100">
        <div class="card-body">
          <h5 class="card-title">${t.Title}</h5>
          <p>${t.Description ? t.Description : ''}</p>
          <div class="meta">Module: ${t.ModuleName} Â· by ${t.CreatedByName}</div>
        </div>
      </div>
    </div>
  `).join('');
})();
</script>
