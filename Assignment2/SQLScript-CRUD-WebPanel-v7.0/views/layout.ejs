<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>CampusLearn</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/style.css" rel="stylesheet">
</head>
<body class="bg-body-tertiary">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container d-flex justify-content-between">
      <a class="navbar-brand" href="/crud">CRUD</a>
      <div class="d-flex gap-2">
        <% if (user) { %>
          <span class="navbar-text me-2"><%= user.name %> (<%= user.role %>)</span>
          <form method="post" action="/logout" class="d-inline">
            <button class="btn btn-outline-light btn-sm">Logout</button>
          </form>
        <% } else { %>
          <a class="btn btn-outline-light btn-sm" href="/login">Login</a>
          <a class="btn btn-primary btn-sm" href="/register">Register</a>
        <% } %>
      </div>
    </div>
  </nav>

  <main class="container py-4">
    <%- body %>
  </main>
</body>
</html>
