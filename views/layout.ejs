<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>CampusLearn</title>

  <!-- Global (light) styles -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/style.css">

  <!-- Load chatbot.css only for dark chatbot page -->
  <% if (pageClass === 'theme-dark') { %>
    <link rel="stylesheet" href="/chatbot.css">
  <% } %>
</head>

<!-- Light everywhere by default; dark only when pageClass sets it -->
<body class="<%= pageClass === 'theme-dark' ? 'theme-dark' : 'bg-body-tertiary' %>">
  <!-- Navbar (keeps Bootstrap’s default look unless theme-dark is active) -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/dashboard">CampusLearn</a>

      <ul class="navbar-nav ms-auto align-items-center gap-2">
        <% if (user) { %>
          <li class="nav-item"><a class="nav-link" href="/topics">Topics</a></li>
          <% if (user.role === 'Student') { %>
            <li class="nav-item"><a class="btn btn-primary btn-sm" href="/topics/create">New Topic</a></li>
          <% } %>
          <li class="nav-item">
            <span class="navbar-text text-white-50 me-2"><%= user.name %> · <%= user.role %></span>
          </li>
          <li class="nav-item">
            <form method="post" action="/logout">
              <button class="btn btn-outline-light btn-sm">Logout</button>
            </form>
          </li>
        <% } else { %>
          <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
          <li class="nav-item"><a class="btn btn-primary btn-sm" href="/register">Register</a></li>
        <% } %>
      </ul>
    </div>
  </nav>

  <!-- Page content -->
  <main class="container py-4">
    <%- body %>
  </main>

  <!-- Scripts -->
  <script src="/app.js"></script>
  <!-- If you have /public/api.js, serve as /api.js via express.static -->
  <script type="module" src="/api.js"></script>
</body>
</html>
