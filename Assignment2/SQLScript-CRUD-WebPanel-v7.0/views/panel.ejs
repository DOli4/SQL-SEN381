<div class="d-flex align-items-center justify-content-between mb-3">
  <h2 class="m-0">Scripts</h2>
  <a class="btn btn-outline-secondary" href="/crud">Back to CRUD</a>
</div>
<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
  <% (files || []).forEach(f => { %>
    <div class="col">
      <div class="card shadow-sm h-100">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><%= f %></h5>
          <div class="mt-auto">
            <a class="btn btn-primary" href="/script/<%= encodeURIComponent(f) %>">Edit & Run</a>
          </div>
        </div>
      </div>
    </div>
  <% }) %>
</div>
<% if (!files || files.length === 0) { %>
  <div class="alert alert-info mt-3">No .sql files found. Add scripts to the <code><%= process.env.SCRIPTS_DIR || 'scripts' %></code> folder.</div>
<% } %>
