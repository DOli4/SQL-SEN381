<h1 class="mb-3">Topic</h1>
<div id="topic" class="mb-4"></div>

<h5 class="mt-4">Attach content</h5>
<form id="uploadForm" class="vstack gap-3" enctype="multipart/form-data">
  <input type="hidden" name="topicId" value="<%= topicId %>">

  <div>
    <input class="form-control" type="file" name="file" required>
  </div>

  <button class="btn btn-secondary" type="submit">Upload</button>
  <p id="uploadMsg" class="mt-2"></p>
</form>

<h5 class="mt-4">Attachments</h5>
<ul id="files" class="list-group"></ul>

<script>
  // make id available to topic-detail.js
  const topicId = <%- JSON.stringify(topicId) %>;
</script>

<script type="module" src="/public/topic-detail.js"></script>
