<!doctype html>
<html lang="en">
<head>
  <!-- Meta -->
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>CampusLearn</title>

  <!-- Styles -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/style.css">
</head>
<script type="module" src="/public/api.js"></script>
<body class="bg-body-tertiary">
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/dashboard">CampusLearn</a>

      <ul class="navbar-nav ms-auto align-items-center gap-2">
        <% if (user) { %>
          <!-- Role-aware nav -->
          <li class="nav-item"><a class="nav-link" href="/topics">Topics</a></li>
          <% if (user.role === 'Student') { %>
            <li class="nav-item"><a class="btn btn-primary btn-sm" href="/topics/create">New Topic</a></li>
          <% } %>
          <li class="nav-item">
            <span class="navbar-text text-white-50 me-2"><%= user.name %> Â· <%= user.role %></span>
          </li>
          <li class="nav-item">
            <form method="post" action="/logout">
              <button class="btn btn-outline-light btn-sm">Logout</button>
            </form>
          </li>
        <% } else { %>
          <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
          <li class="nav-item"><a class="btn btn-primary btn-sm" href="/register">Register</a></li>
        <% } %>
      </ul>
    </div>
  </nav>

  <!-- Page content -->
  <main class="container py-4">
    <%- body %>
  </main>

  <!-- Scripts -->
  <script src="/app.js"></script>
</body>
</html>
